<Application x:Class="Vsite.Oom.Battleship.GUI.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:gui="clr-namespace:Vsite.Oom.Battleship.GUI"
             RequestedThemeVariant="Light">
  <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

  <Application.DataTemplates>
    <gui:ViewLocator />
  </Application.DataTemplates>


  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="Assets/Styles/Colors.axaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>

    <FontFamily x:Key="PoetsenOneFont">Assets\Fonts\#Poetsen One</FontFamily>
  </Application.Resources>

  <Application.Styles>
    <SimpleTheme />
    <StyleInclude Source="Assets/Styles/RadioButton.axaml" />
  </Application.Styles>

</Application>